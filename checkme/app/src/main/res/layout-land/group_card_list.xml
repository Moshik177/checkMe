<?xml version="1.0" encoding="utf-8"?>


 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_card"
        android:descendantFocusability="afterDescendants">

     <RelativeLayout
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="80dp"
         tools:ignore="UselessParent"
         android:layout_alignParentTop="true"
         android:layout_alignParentStart="true">


         <ImageView
          android:id="@+id/point_img"
          android:layout_width="7dp"
          android:layout_height="25dp"
          android:scaleType="fitXY"
          android:layout_alignTop="@+id/group_name"
          android:layout_marginStart="25dp"
          android:layout_alignParentStart="true"
             android:contentDescription=""
          android:layout_marginTop="4dp" />

         <TextView
             android:id="@+id/group_name"
             android:layout_height="38dp"
             android:text="some_Text"
             android:textColor="@color/holo_purple_dark"
             android:paddingRight="15dp"
             android:textStyle="bold"
             android:textSize="24sp"
             tools:ignore="RtlHardcoded,RtlSymmetry"
             android:layout_width="wrap_content"
             android:layout_marginEnd="20dp"
             android:layout_alignParentBottom="true"
             android:layout_toStartOf="@+id/group_empty_picture"
             android:layout_marginBottom="10dp" />

         <ImageView
          android:id="@+id/group_empty_picture"
          android:layout_width="50dp"
          android:layout_height="45dp"
          android:scaleType="fitXY"
          android:clickable="true"
          android:onClick="onCreateContextMenu"
          android:contentDescription="" 
          android:layout_marginEnd="12dp"
          android:layout_alignParentEnd="true"
          android:layout_alignBottom="@+id/group_name" />

     </RelativeLayout>
 </RelativeLayout>
